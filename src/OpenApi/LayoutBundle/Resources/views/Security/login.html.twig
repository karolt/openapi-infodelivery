{% extends "LayoutBundle::layout.html.twig" %}

{% block container %}
<style type="text/css">

    .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
        -moz-border-radius: 5px;
        border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
        -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
        box-shadow: 0 1px 2px rgba(0,0,0,.05);
    }
    .form-signin .form-signin-heading,
    .form-signin .checkbox {
        margin-bottom: 10px;
    }
    .form-signin input[type="text"],
    .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
    }

</style>
{% if error %}
<div>{{ error.message }}</div>
{% endif %}

<form class="form-signin" action="{{ path('security_login_check') }}" method="post">
    <h2 class="form-signin-heading">Zaloguj się</h2>
    <input type="text" name="_username" value="{{ last_username }}"  class="input-block-level" placeholder="Nazwa użytkownika">
    <input type="password" name="_password" class="input-block-level" placeholder="Hasło">

    <button class="btn btn-large btn-primary" type="submit">Zaloguj</button>
</form>
{% endblock %}